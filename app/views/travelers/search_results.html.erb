<div class="container mt-5">
  <h1>Search Results</h1>

  <h2>Travelers</h2>
  <% if @travelers.present? %>
    <% @travelers.each do |traveler| %>
      <p><%= traveler.name %> - <%= traveler.travel_date %></p>
    <% end %>
  <% else %>
    <p>No travelers found for your search criteria.</p>
  <% end %>

  <h2>Parcel Ads</h2>
  <% if @parcel_ads.present? %>
    <% @parcel_ads.each do |ad| %>
      <p><%= ad.title %> - <%= ad.description %></p>
    <% end %>
  <% else %>
    <p>No parcel ads found for your search criteria.</p>
  <% end %>

  <h2>Buy For Me</h2>
  <% if @buy_for_me.present? %>
    <% @buy_for_me.each do |item| %>
      <p><%= item.product_name %> - <%= item.price %></p>
    <% end %>
  <% else %>
    <p>No buy-for-me options found for your search criteria.</p>
  <% end %>

</div>