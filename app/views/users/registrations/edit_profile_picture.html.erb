<div class="container mt-3">
 <img alt="Profile picture of a person looking straight ahead without sunglasses and with no one next to them" class="profile-pic" height="100" src="https://storage.googleapis.com/a1aa/image/rnv0HlocfC1qYS421SND1G8FjEhI7bzExh2Rf0f1b1n9kqInA.jpg" width="100"/>
 <div class="instruction">
  Look straight ahead, without sunglasses and with no one next to you.
</div>
  <button class="btn btn-primary">
    <%= form_for @user, url: update_profile_picture_path(@user), html: { multipart: true } do |f| %>
      <%= f.hidden_field :current_user, value: current_user.id %>
      <div class="form-group">
        <%= f.label :profile_picture %>
        <%= f.file_field :profile_picture, class: 'form-control mt-2 mb-2' %>
      </div>

      <%= f.submit 'Upload Picture', class: 'btn btn-success' %>
    <% end %>
  </button>
</div>

<style>
  .container {
    text-align: center;
  }
  .profile-pic {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
  }
  .instruction {
    font-family: 'Arial', sans-serif;
    font-size: 24px;
    color: #004d40;
    margin-top: 20px;
  }
  .btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    margin-top: 20px;
  }
</style>

