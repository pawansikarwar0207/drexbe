 <!-- Chat Header -->
<div class="chat-header d-flex align-items-center p-3 shadow-sm bg-light">
  <div class="user-avatar me-3">
    <% if @other_user.profile_picture.attached? %>
      <%= image_tag @other_user.profile_picture, class: "avatar rounded-circle" %>
    <% else %>
      <img src="https://storage.googleapis.com/a1aa/image/O8MiwnO96lJ0Opf2gM3iJlvzomfUBmWFPeRabNe6c6llz3UPB.jpg" alt="Avatar" class="avatar rounded-circle">
    <% end %>
  </div>
  <div>
    <h6 class="mb-0 fw-bold"><%= @other_user.full_name %></h6>
    <small class="text-muted">Active now</small>
  </div>
</div>

<!-- Chat Messages -->
<div class="chat-messages">
  <%= turbo_frame_tag "message_frame" do %>
    <% @messages.each do |message| %>
      <div class="cont-<%= message.user.id %>">
        <div class="message-box msg-<%= message.user.id %> message-content-container">
          <%= message.content %>
          <!-- Timestamp -->
          <small class="text-muted d-block text-end">
            <%= message.created_at.strftime("%I:%M %p") %>
          </small>

          <!-- Reaction Buttons -->
          <div
            class="reaction-buttons <%= message.user == current_user ? 'reciver-reaction' : 'sender-reaction' %>"
            data-controller="emoji"
            data-emoji-chat-room-id-value="<%= chat_room.id %>"
            data-emoji-message-id-value="<%= message.id %>"
          >
            <button
              data-emoji-target="emojiButton"
              data-action="click->emoji#togglePicker"
              class="reaction-button"
              aria-label="Pick an emoji"
            >
              ðŸ˜€
            </button>

            <!-- Hidden Emoji Picker -->
            <div
              data-emoji-target="emojiPicker"
              style="display: none"
              class="emoji-picker"
            ></div>

            <!-- Hidden Input to store selected emoji -->
            <input
              type="hidden"
              data-emoji-target="reactionInput"
              value=""
            >
          </div>
        </div>

        <!-- Display Reactions -->
        <div id="<%= dom_id(message, :reactions) %>" class="message-reactions d-flex mt-2">
          <% if @reactions_counts.present? && @reactions_counts[message.id].present? %>
            <% @reactions_counts[message.id].each do |emoji, count| %>
              <span class="me-2">
                <%= emoji %> (<%= count %>)
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= turbo_stream_from "chatroom_#{chat_room.id}" %>

<!-- Chat Input -->
<div class="chat-input p-3 border-top">
  <%= form_with model: [chat_room, Message.new], local: false, class: "d-flex align-items-center" do |form| %>
    <div class="flex-grow-1 me-2">
      <%= form.text_area :content, placeholder: "Type a message...", class: "form-control rounded-pill px-3", rows: 1, onkeypress: "if (event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); this.form.requestSubmit(); }" %>
    </div>
    <%= form.submit "Send", class: "btn btn-dark rounded-pill px-4" %>
  <% end %>
</div>

<style>
  /* Copy message */
  .message-content-container {
    position: relative;
  }

  .message-content-container .copy-btn {
    display: none;
    position: absolute;
    top: 20%;
    transform: translateY(-50%);
    font-size: 12px;
    padding: 5px 10px;
    cursor: pointer;
  }

  /* Hover Effect */
  .message-content-container:hover .copy-btn {
    display: block;
  }

  /* Position for Sent Messages */
  .message-content-container.sent .copy-btn {
    right: -55px; /* Position on the left side of sent messages */
  }

  /* Position for Received Messages */
  .message-content-container.received .copy-btn {
