 <!-- Chat Header -->
<%= turbo_frame_tag "chatroom_frame" do %>
  <div class="chat-header d-flex align-items-center p-3 shadow-sm bg-light">
    <div class="user-avatar me-3">
      <% if @other_user.profile_picture.attached? %>
        <%= image_tag @other_user.profile_picture, class: "avatar rounded-circle" %>
      <% else %>
        <img src="https://storage.googleapis.com/a1aa/image/O8MiwnO96lJ0Opf2gM3iJlvzomfUBmWFPeRabNe6c6llz3UPB.jpg" alt="Avatar" class="avatar rounded-circle">
      <% end %>
    </div>
    <div>
      <h6 class="mb-0 fw-bold"><%= @other_user.full_name %></h6>
      <small class="text-muted">Active now</small>
    </div>
  </div>

  <!-- Chat Messages -->
  <div class="chat-messages">
    <%= turbo_frame_tag "message_frame" do %>
      <div id="messages-container" class="messages-container">
        <% @groups.each do |date, messages| %>
          <div class="date-section">
            <div class="date-heading">
              <%= date %>
            </div>
          </div>

          <% messages.each do |message| %>
            <div class="cont-<%= message.user.id %>">
              <div class="message-box msg-<%= message.user.id %> message-content-container">
                <%= message.content %>
                
                <!-- Show sent status if the message is sent but not delivered -->
                <% if message.sent? %>
                  <span class="badge bg-secondary">Sent</span>
                <% end %>

                <!-- Show delivered status if the message is delivered -->
                <% if message.delivered? %>
                  <span class="badge bg-success">Delivered</span>
                <% end %>

                <!-- Timestamp -->
                <small class="text-muted d-block text-end">
                  <%= message.created_at.strftime("%I:%M %p") %>
                </small>

                <!-- Reaction Buttons -->
              </div>

              <!-- Display Reactions -->
              <div
                class="reaction-buttons <%= message.user == current_user ? 'reciver-reaction' : 'sender-reaction' %>"
                data-controller="emoji"
                data-emoji-chat-room-id-value="<%= chat_room.id %>"
                data-emoji-message-id-value="<%= message.id %>"
                >
                <div class="hover-emoji-container">
                  <button
                    data-emoji-target="emojiButton"
                    data-action="click->emoji#togglePicker"
                    class="reaction-button"
                    aria-label="Pick an emoji"
                  >
                    ðŸ˜€
                  </button>
                </div>

                <!-- Hidden Emoji Picker -->
                <div
                  data-emoji-target="emojiPicker"
                  style="display: none"
                  class="emoji-picker"
                ></div>

                <!-- Hidden Input to store selected emoji -->
                <input
                  type="hidden"
                  data-emoji-target="reactionInput"
                  value=""
                >
                <!-- Copy Button -->
                <button 
                  class="copy-btn btn btn-outline-secondary btn-sm"
                  data-action="click->emoji#copy"
                  data-clipboard-content="<%= message.content %>"
                >
                  Copy
                </button>
                <div id="<%= dom_id(message, :reactions) %>" class="message-reactions d-flex mt-2">
                  <% if @reactions_counts.present? && @reactions_counts[message.id].present? %>
                    <% @reactions_counts[message.id].each do |emoji, count| %>
                      <span class="me-2">
                        <%= emoji %> (<%= count %>)
                      </span>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>  
      </div>
    <% end %>
  </div>

  <%= turbo_stream_from "chatroom_#{chat_room.id}" %>
  <!-- Chat Input -->
  <div class="chat-input p-3 border-top">
    <%= form_with model: [chat_room, Message.new], local: false, class: "d-flex align-items-center", data: { action: 'turbo:submit-end->turbo-stream#reset' } do |form| %>
      <div class="flex-grow-1 me-2">
        <%= form.text_area :content, placeholder: "Type a message...", class: "form-control rounded-pill px-3", rows: 1, onkeypress: "if (event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); this.form.requestSubmit(); }" %>
      </div>
      <%= form.submit "Send", class: "btn btn-dark rounded-pill px-4" %>
    <% end %>
  </div>
<% end %>

<style>
  /* Copy message */
  .message-content-container {
    position: relative;
  }

  .message-content-container .copy-btn {
    display: none;
    position: absolute;
    top: 20%;
    transform: translateY(-50%);
    font-size: 12px;
    padding: 5px 10px;
    cursor: pointer;
  }

  /* Hover Effect */
  .message-content-container:hover .copy-btn {
    display: block;
  }

  /* Position for Sent Messages */
  .message-content-container.sent .copy-btn {
    right: -55px; /* Position on the left side of sent messages */
  }

  /* Position for Received Messages */
  .message-content-container.received .copy-btn {
    left: -55px; /* Position on the right side of received messages */
  }


  /* Chat Container */
  .airbnb-chat-container {
    display: flex;
    flex-direction: column;
    background-color: #f7f7f7;
    margin: 0 auto;
  }

  /* Header */
  .chat-header {
    background-color: white;
    border-bottom: 1px solid #e0e0e0;
  }

  .chat-header h6 {
    margin: 0;
    font-weight: 600;
  }

  /* Messages */
  .chat-messages {
    flex-grow: 1;
    overflow-y: auto;
    padding: 20px;
    background-color: #ffffff;
  }

  .message {
    display: flex;
    align-items: flex-start;
    margin-bottom: 15px;
    border-bottom: none;
  }

  .message.sent {
    flex-direction: row-reverse;
  }

  .message.received {
    flex-direction: row;
  }

  .avatar-container img {
    width: 30px;
    height: 30px;
    object-fit: cover;
    border-radius: 50%;
  }

  .message-content {
    max-width: 100%;
    background-color: #f7f7f7;
    border-radius: 5px;
    padding: 10px;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
  }

  .message.sent .message-content {
    background-color: #dcf8c6;
  }

  .message.received .message-content {
    background-color: #ffffff;
  }

  .message-text {
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }

  /* Input */
  .chat-input {
    background-color: #ffffff;
  }

  .chat-input .form-control {
    border: 1px solid #dcdcdc;
    box-shadow: none;
  }

  .chat-input .btn {
    font-weight: bold;
  }

  .chat-messages {
    height: 71vh !important;
    overflow-y: scroll;
  }
  body {
    overflow: auto;
  }/* Adjust spacing for Reaction Buttons */
  .date-heading {
      margin: 10px 0;
    font-size: 14px;
    font-weight: bold;
    padding: 10px;
    border: #888;
    background: #f0f0f0;
    width: fit-content;
    border-radius: 15px;
}

.message-content-container {
  position: relative;
  margin: 5px 0;
  padding: 10px;
  border-radius: 8px;
  background-color: #f1f1f1;
}
.date-section {
  margin: 0 auto;
  width: fit-content;
}
</style>
