<section class="section popular-car-type">
  <div class="container mb-5 mt-5">
    
    <!-- Heading Title -->
    <div class="text-center" data-aos="fade-down">
      <h2 class="fw-bold text-primary display-5"  style="color: #353188 !important" >Elevate Your Experience</h2>
      <h3 class="fs-4">Download Our App Today</h3>
    </div>

    <!-- App Store Links -->
    <div class="d-flex justify-content-center align-items-center gap-3 flex-wrap mt-2">
      <%= image_tag "google-play.png", class: "img-fluid store-badge" %>
      <%= image_tag "apple-store.png", class: "img-fluid store-badge" %>
    </div>

    <!-- Statistics Cards -->
    <div class="d-flex justify-content-center align-items-center">
      <div class="row justify-content-center text-center mt-3">
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <div class="card text-white shadow p-4 mx-auto" style="background-color: #353188; max-width: 280px;">
            <span><%= image_tag "thumbs.png", class: "img-fluid mb-2 stat-icon" %></span>
            <span class="fs-5 fw-bold">10,000+ Orders</span>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <div class="card text-white shadow p-4 mx-auto" style="background-color: #353188; max-width: 280px;">
            <span><%= image_tag "users.png", class: "img-fluid mb-2 stat-icon" %></span>
            <span class="fs-5 fw-bold">5,000+ <br> Users</span>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <div class="card text-white shadow p-4 mx-auto" style="background-color: #353188; max-width: 280px;">
            <span><%= image_tag "travel.png", class: "img-fluid mb-2 stat-icon" %></span>
            <span class="fs-5 fw-bold">3,000+ <br> Trips</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
