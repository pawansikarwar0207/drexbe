      <div class="col-md-2">
        <%= image_tag "google-play.png", class:"mt-4" %>
      </div>
      <div class="col-md-2">
        <%= image_tag "apple-store.png", class:"mt-4" %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>

  <div class="row g-0" style="text-align: center;">
