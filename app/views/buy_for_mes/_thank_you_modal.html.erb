<div class="modal fade" id="thankyouModal" tabindex="-1" aria-labelledby="thankyouModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="thankyouModalLabel">Thank You!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <p>Your have successfully shared your request. You can check it in your dashboard.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="thankyou-ok-btn">OK</button>
      </div>
    </div>
  </div>
</div>

<script>
  // Show the modal automatically when inserted into the DOM
  var thankyouModal = new bootstrap.Modal(document.getElementById('thankyouModal'));
  thankyouModal.show();

  // Redirect on "OK" button click
  document.getElementById('thankyou-ok-btn').addEventListener('click', function() {
    window.location.href = "<%= buy_for_mes_path %>";
  });
</script>
