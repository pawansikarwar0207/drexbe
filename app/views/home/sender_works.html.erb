                  <span>
                    <%= form.text_field :departure_city, class: 'form-control', placeholder: 'Departure', id: 'departure_city_select', autocomplete: 'off', value: params[:departure_city].present? ? params[:departure_city] : '' %>
                    <%= form.hidden_field :departure_country, id: 'departure_country' %>
                  </span>
                </div>
                <div>
                  <i class="fas fa-map-marker-alt"></i>
                  <span>
                    <%= form.text_field :arrival_city, class: 'form-control', placeholder: 'Arrival', id: 'arrival_city_select', autocomplete: 'off', value: params[:arrival_city].present? ? params[:arrival_city] : ''  %>
