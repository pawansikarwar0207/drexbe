    Your browser does not support the video tag.
  </video>
  <div class="hero-content text-white">
    <h1 class="display-3 fw-bold">Welcome to DREXBE</h1>
    <p class="lead">Discover how we can help you with our exceptional services.</p>
    <a href="#services" class="btn btn-primary btn-lg mt-4 rounded-pill btn-learn-more">Learn More</a>
  </div>
</section>

<!-- Search Section -->
<section class="search-section py-5 bg-light">
  <div class="container mt-1 mb-4">
    <h2 class="text-center mb-4 fw-bold">Find Travelers</h2>
    <%= form_with url: search_travelers_path, method: :get, local: true, class: "search-form row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.label :from_city, 'From City', class: 'form-label' %>
        <%= form.select :from_city, options_for_select(Traveler::CITIES_IN_MP, params[:from_city]), { prompt: 'Select a city' }, class: 'form-select' %>
      </div>
      <div class="col-md-4">
        <%= form.label :to_city, 'To City', class: 'form-label' %>
        <%= form.select :to_city, options_for_select(Traveler::CITIES_IN_MP, params[:from_city]), { prompt: 'Select a city' }, class: 'form-select' %>
      </div>
      <div class="col-md-4">
        <%= form.label :travel_date, 'Travel Date', class: 'form-label' %>
        <%= form.date_field :travel_date, value: params[:travel_date], class: 'form-control' %>
      </div>
      <div class="col-12 text-center mt-5">
        <%= form.submit 'Search', class: 'btn btn-primary px-5 rounded-pill btn-learn-more ' %>
      </div>
    <% end %>
  </div>
</section>

