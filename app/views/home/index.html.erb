<script>
  document.addEventListener("DOMContentLoaded", function() {
    function initOwlCarousel(carouselClass, prevBtn, nextBtn) {
      let $carousel = $(carouselClass);

      if ($carousel.length > 0) {
        $carousel.owlCarousel({
          loop: true,
          margin: 5, // Keep space between cards
          center: true, // Center the single card in mobile view
          nav: false,
          dots: false,
          responsive: {
            0: { items: 1, margin: 20, center: true }, // Ensure centering in mobile view
            576: { items: 2, margin: 15 },
            768: { items: 3, margin: 20 },
            992: { items: 4, margin: 25 }
          }
        });

        // Custom navigation buttons
        $(prevBtn).click(function() {
          $carousel.trigger("prev.owl.carousel");
        });

        $(nextBtn).click(function() {
          $carousel.trigger("next.owl.carousel");
        });
      }
    }

    // Initialize both carousels separately
    initOwlCarousel(".owl-carousel-1", ".owl-prev-btn-1", ".owl-next-btn-1");
    initOwlCarousel(".owl-carousel-2", ".owl-prev-btn-2", ".owl-next-btn-2");
  });
</script>